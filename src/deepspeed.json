{
  "train_batch_size": "auto",
  "gradient_accumulation_steps": 1,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": "auto"
    }
  },
  "fp16": {
        "enabled": "auto",
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 32,
        "hysteresis": 2,
        "min_loss_scale": 1
  },
  "bf16": {
        "enabled": "auto"
  },
  "logging": {
    "steps_per_print":1,
    "wall_clock_breakdown":true,
    "dump_state":true
  },
   "zero_optimization": {
        "stage": 3,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "offload_param": {
          "device": "cpu",
          "pin_memory": true
        },
        "overlap_comm": true,
        "contiguous_gradients": true,
        "stage3_max_live_parameters": 1e6,
        "stage3_max_reuse_distance": 1e6,
        "stage3_prefetch_bucket_size": 0.94e5,
        "stage3_param_persistence_threshold": 1e3,
        "reduce_bucket_size": 1e5,
        "sub_group_size": 1e5,
        "gather_16bit_weights_on_model_save": true
  },
  "amp": {
    "enabled": "auto",
    "opt_level": "auto"
  },
  "flops_profiler": {
      "enabled": true,
      "profile_step": 20,
      "module_depth": -1,
      "top_modules": 1,
      "detailed": false,
      "output_file": null
  }
}